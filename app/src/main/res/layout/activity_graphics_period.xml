        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semana"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/Mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃªs"

        tools:ignore="MissingConstraints"
