<!-- rounded_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo da imagem -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Borda circular -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="8dp"
                android:color="@color/cinza_escuro"
                /> <!-- Cor e largura da borda -->
        </shape>
    </item>
</layer-list>
